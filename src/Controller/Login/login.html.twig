{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <form action="{{ path('user_login') }}" method="post">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
        </div>

        <div class="form-group has-danger">
            <label for="password">Password:</label>
            <input type="password" id="password" class="form-control" name="_password"/>
            {% if error %}
                <script>
                    let element = document.getElementById('password');
                    element.classList.add('is-invalid');
                </script>
                <div class="invalid-feedback">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>

        <input type="hidden" name="_target_path" value="{{ path('root') }}"/>
        <button type="submit" class="btn btn-outline-primary">login</button>
        <a href="{{ path('user_registration') }}">
            <button type="button" class="btn btn-outline-secondary">Register</button>
        </a>
    </form>
{% endblock %}
